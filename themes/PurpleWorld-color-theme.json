{
  "name": "Violet Harmony",
  "type": "dark",
  "colors": {
    "editor.background": "#1C1C1C",            // Fond de l'éditeur
    // "editor.foreground": "#D4D4D4",
    "titleBar.inactiveBackground": "#5E2A84",
    "editorCursor.foreground": "#B39DDB",      // Couleur du curseur
    "editor.lineHighlightBackground": "#311B92", // Ligne en surbrillance
    "editor.selectionBackground": "#5E35B1",   // Sélection de texte
    "editor.findMatchBackground": "#7E57C2",   // Correspondance de recherche
    "editor.findMatchHighlightBackground": "rgba(206, 143, 247, 0.1)", // Surlignage des correspondances
    "activityBar.background": "#5E35B1",       // Barre d'activité
    "sideBar.foreground": "#FFFFFF",    // Couleur du texte dans la sidebar (blanc pour un bon contraste)
    "sideBar.border": "#6A0DAD",
    "sideBar.background": "#2C3E50",      // Optionnel : une bordure légèrement plus claire pour la sidebar
    "sideBarSectionHeader.background": "#5E2A84",  // Optionnel : une nuance plus claire pour les headers
    "sideBarSectionHeader.foreground": "#FFFFFF",
    "statusBar.background": "#7E57C2",         // Barre de statut
    "terminal.background": "#1C1C1C",          // Fond du terminal
    "terminal.foreground": "#D4D4D4",          // Texte du terminal
    "button.background": "#7E57C2",            // Boutons
    "badge.background": "#80DEEA",             // Badge d'alerte
    "titleBar.activeForeground": "#D4D4D4",
    "editorLineNumber.foreground": "#7E57C2", // Couleur des numéros de ligne en vert émeraude
    "editorLineNumber.activeForeground": "#3C9D51",     // Texte de la barre de titre,
    "editorSuggestWidget.background": "#2C3E50",  // Un fond bleu-gris foncé
    "editorSuggestWidget.border": "#6A0DAD",      // Bordure verte pour rappeler Zoro
    "editorSuggestWidget.foreground": "#c0c0c0",  // Texte argenté
    "editorSuggestWidget.selectedBackground": "#7ec850",  // Fond vert clair pour l'élément sélectionné
    "editorSuggestWidget.highlightForeground": "#7E57C2"
  },
  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#A13333",                // Couleur des commentaires
        "fontStyle": "italic"
      }
    },
    {
      "scope": [
        "keyword",
        "meta.return.type.ts",
        "support.type",
        "entity.name.type",
        "function",
        "meta.map.key.yaml",
        "meta.object-literal.key",
        "variable.other.object"
      ],
      "settings": {
        "foreground": "#7E57C2",                // Couleur des mots-clés
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        // "variable",
        "meta.method.declaration",
        "variable.other.readwrite",
        "variable.other.property",
        "meta.map.value.yaml",
        "support.constant.property-value.css",
        "keyword.other.unit"
      ],
      "settings": {
        "foreground": "#3C9D51"                 // Couleur des variables
      }
    },
    {
      "scope": [
        "number",
        "support.class",
        "meta.function-call",
        "storage.type",
        "meta.type.parameters",
        "storage.modifier",
        "constant.numeric",
        "meta.type.parameters.ts",
        "variable.parameter",
        "meta.selector.css",
        "string.template",
        "string.quoted",
        "punctuation.definition.block.sequence.item.yaml"
      ],
      "settings": {
        "foreground": "#A3D8F4"                 // Couleur des nombres
      }
    },
    {
      "scope": "variable.language.this",
      "settings": {
        "foreground": "#c13c1e",  // Couleur que tu veux pour 'this' (ici un orange vif)
        "fontStyle": "bold"       // Style optionnel, par exemple gras
      }
    },
    {
      "scope": "entity.name.function",  // Noms de fonction
      "settings": {
        "foreground": "#A779E9",  // Premier violet clair pour les noms de fonction
        "fontStyle": "bold"       // Optionnel : gras pour le style
      }
    },
    {
      "scope": "variable.other.constant",  // Constantes (e.g., const)
      "settings": {
        "foreground": "#D08FFF",  // Violet clair pour les constantes
        "fontStyle": "bold"
      }
    },
    {
      "scope": "meta.tag",  // Balises HTML
      "settings": {
        "foreground": "#BF93F9",  // Violet pastel pour les balises HTML
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "constant.language.boolean",  // Pour la valeur 'false'
        "constant.language.undefined"      // Pour la valeur 'undefined'
      ],
      "settings": {
        "foreground": "#ADD8E6",  // Bleu clair pour 'false' et 'undefined'
        "fontStyle": "bold"      // Optionnel : gras pour plus de visibilité
      }
    },
    {
      "scope": [
        "entity.name.tag.template", // Balise <template>
        "entity.name.tag.script",
        "entity.name.tag.style",
        "constant.other.color"
      ],
      "settings": {
        "foreground": "#ADD8E6",  // Bleu clair pour les balises <template> et <script>
        "fontStyle": "bold"       // Optionnel : gras pour bien les démarquer
      }
    },
    {
      "scope": [
          "entity.other.attribute-name.html",
      ],
      "settings": {
          "foreground": "#F0E68C",
          "fontStyle": "bold"
      }
    }
  ],
}
